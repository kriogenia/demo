{
  "settings": {
    "analysis": {
      "filter": {
        "title_word_delimiter_graph_f": {
          "type": "word_delimiter_graph",
          "catenate_all": true,
          "stem_english_possessive": false
        },
        "number_synonyms_f": {
          "type": "synonym",
          "synonyms": [
            "0, zero",
            "i, 1, one",
            "ii, 2, two",
            "iii, 3, three",
            "iv, 4, four",
            "v, 5, five",
            "vi, 6, six",
            "vii, 7, seven",
            "viii, 8, eight",
            "ix, 9, nine",
            "x, 10, ten"
          ]
        },
        "title_multiplexer_f": {
          "type": "multiplexer",
          "filters": [
            "title_word_delimiter_graph_f, flatten_graph",
            "number_synonyms_f"
          ]
        },
        "type_synonyms_f": {
          "type": "synonym",
          "synonyms": [
            "film, picture => movie",
            "series => tvseries",
            "ep, episode => tvepisode",
            "special => tvspecial",
            "miniseries => tvminiseries",
            "game => videogame"
          ]
        },
        "type_keep_f" : {
          "type":"keep",
          "keep_words": [
            "movie",
            "short",
            "tvseries",
            "tvepisode",
            "tvspecial",
            "tvmovie",
            "video"
          ]
        }
      },
      "analyzer": {
        "title_analyzer": {
          "type": "custom",
          "char_filter": [
          ],
          "tokenizer": "whitespace",
          "filter": [
            "asciifolding",
            "decimal_digit",
            "lowercase",
            "number_synonyms_f",
            "title_word_delimiter_graph_f",
            "flatten_graph"
          ]
        },
        "title_search_analyzer": {
          "type": "custom",
          "char_filter" : [
            "html_strip"
          ],
          "tokenizer": "standard",
          "filter": [
            "asciifolding",
            "decimal_digit",
            "lowercase",
            "title_word_delimiter_graph_f",
            "flatten_graph"
          ]
        },
        "type_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        },
        "type_search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "type_synonyms_f"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "original_title": {
        "type": "text",
        "search_analyzer": "title_search_analyzer",
        "analyzer": "title_analyzer"
      },
      "type": {
        "type": "text",
        "search_analyzer": "type_search_analyzer",
        "analyzer": "type_analyzer"
      }
    }
  }
}